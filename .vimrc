set fenc=utf-8
set nobackup
set noswapfile

set number
set title
set linebreak
set showmatch
set ruler
set backspace=indent,eol,start
set laststatus=2
set showcmd
set cursorline

set autoindent
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab

set visualbell

set ignorecase
set smartcase
set incsearch
set wrapscan
set hlsearch
nmap <Esc><Esc> :nohlsearch<CR><Esc>

colorscheme onehalfdark
set background=dark
